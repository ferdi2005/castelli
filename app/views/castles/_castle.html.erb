<% cache castle do %>
    markers.addLayer(L.marker(new L.LatLng(<%= castle.latitude %>, <%= castle.longitude %>), { title: "<%= castle.label %>" }).bindPopup('<%= image_tag "https://commons.wikimedia.org/w/thumb.php?f=#{castle.image}&w=300" unless castle.image.blank? %><%== '<br/>' unless castle.image.blank? %><%= link_to castle.label, castle %>'));
<% end %>